generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int           @id @default(autoincrement())
  nome         String
  email        String        @unique
  senha        String
  propriedades Propriedade[]
}

model Propriedade {
  id        Int       @id @default(autoincrement())
  nome      String
  usuarioId Int
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  produtos  Produto[]
}

model Produto {
  id            Int            @id @default(autoincrement())
  nome          String
  categoria     String
  quantidade    Int
  validade      DateTime
  propriedadeId Int
  propriedade   Propriedade    @relation(fields: [propriedadeId], references: [id])
  movimentacoes Movimentacao[]
}

model Movimentacao {
  id               Int      @id @default(autoincrement())
  produtoId        Int
  produto          Produto  @relation(fields: [produtoId], references: [id])
  tipo             String
  quantidade       Int
  dataMovimentacao DateTime @default(now())
}
